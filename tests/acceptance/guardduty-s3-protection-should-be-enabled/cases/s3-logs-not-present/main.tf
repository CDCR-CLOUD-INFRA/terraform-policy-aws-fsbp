provider "aws" {
  region = "us-west-2"
}

resource "aws_guardduty_detector" "MyDetector" {
  enable = true

  datasources {
    kubernetes {
      audit_logs {
        enable = false
      }
    }
    malware_protection {
      scan_ec2_instance_with_findings {
        ebs_volumes {
          enable = true
        }
      }
    }
  }
}